<script>

    
    function generatePDF() {
      var opt = {
        filename:     'FAIRECO-REPORT-<%-githubData.Repo %>.pdf',
        };
      const element = document.getElementById("pdf");
      var elementclone = element.cloneNode(true);
      elementclone.style = "display:block";
      html2pdf().set(opt).from(elementclone).save();
      elementclone.remove();
    }

</script>
<%
if (typeof(githubData) === 'undefined') {
    throw new Error("Missing GitHub data");
}
if (typeof(quality) === 'undefined') {
    throw new Error("Missing QualityMetrics data");
}
if (typeof(searchSECO) === 'undefined') {
    throw new Error("Missing SearchSECO data");
}
if (typeof(paperData) === 'undefined') {
    throw new Error("Missing CitingPapers data");
}

function getRepositoryTitle() {
    return githubData.Repo;
}

function getRepositoryOwner() {
    return githubData.Owner;
}

function getFullDate() {
    const date = new Date();
    let day = date.getDate();
    let month = date.getMonth() + 1;
    let year = date.getFullYear();
    let currentDate = day + "/" + month + "/" + year;
    return currentDate;
}

function getTopContributors() {
    let returnString = "";
    let count = 0;
    githubData.Contributors.forEach(cont => {
        if (cont.type === "User" && count <= 6){
            returnString += "<p>" + cont.login + "</p>";
            count++;
        }
    });
    return returnString;
}

function getRepositoryStars() {
    return githubData.Stars;
}

function getrepositoryWatchers() {
    return githubData.Watched;
}

function getRepositoryforks() {
    return githubData.Forks;
}

function getTimesCited() {
    return paperData.firstHandCitations;
}

function getFairness() {
    return quality.fairnessScore + "/5";
}

function getMethodsReuse() {
    let count = 0;
    searchSECO.methods.forEach(meth =>{
        count += meth.matches.length;
    });
    return count;
}

function getQualityScore() {
    return quality.score + "/100";
}
%>

<div class="Overview">
    <h1 class="Overview__Title">Overview</h1>
    <div class="Overview__Content">
        <div class="Repository__Info__Top">
            <div class="Repository__Info">
                <h3>Repository title</h3>
                <h2 class="Repository__Data"><%- getRepositoryTitle() %></h2>
            </div>
            <div class="Repository__Info">
                <h3>Repository owner</h3>
                <h2 class="Repository__Data"><%- getRepositoryOwner() %></h2>
            </div>
            <div class="Repository__Info">
                <h3>Date of issue</h3>
                <h2 class="Repository__Data"><%- getFullDate() %></h2>
            </div>
        </div>
        <div class="Repository__Info__Left">
            <div class="Repository__Info">
                <h3>Top contributors</h3>
                <h2 class="Repository__Data Repository__Contributors"><%- getTopContributors() %></h2>
            </div>
        </div>
        <div class="Repository__Info__Right">
            <div class="Repository__Info">
                <h3>Repository stars</h3>
                <h2 class="Repository__Data"><%- getRepositoryStars() %><i class="fa-solid fa-star"></i></h2>
            </div>
            <div class="Repository__Info">
                <h3>Repository watchers</h3>
                <h2 class="Repository__Data"><%- getrepositoryWatchers() %><i class="fa-solid fa-eye"></i></h2>
            </div>
            <div class="Repository__Info">
                <h3>Repository Forks</h3>
                <h2 class="Repository__Data"><%- getRepositoryforks() %><i class="fa-solid fa-code-fork"></i></h2>
            </div>
        </div>
    </div>
    <h1 class="Scores__Title">Your scores</h1>
    <div class="Meta-data__Row">
        <div class="Meta-data">
            <p>Times cited</p>
            <div class = Meta-data__Data><p><%- getTimesCited() %></p></div>
        </div>
        <div class="Meta-data">
            <p>Fairness</p>
            <div class = Meta-data__Data><p><%- getFairness() %></p></div>
        </div>
        <div class="Meta-data">
            <p>Methods reused in other projects</p>
            <div class = Meta-data__Data><p><%- getMethodsReuse() %></p></div>
        </div>
        <div class="Meta-data">
            <p>Quality Score</p>
            <div class = Meta-data__Data><p><%- getQualityScore() %></p></div>
        </div>
    </div>
    <button id="pdfbutton" onclick="generatePDF()"><i class="fa-solid fa-download"></i>  Download as PDF</button>
</div>

