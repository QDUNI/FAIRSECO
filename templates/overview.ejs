%>

<div class="Overview">
    <h1 class="Overview__Title">Overview</h1>
    <div class="Overview__Content">
        <div class="Repository__Info__Left">
            <div class="Repository__Info">
                <h3>Repository title</h3>
                <h2 class="Repository__Data"><%- getRepositoryTitle() %></h2>
            </div>
            <div class="Repository__Info">
                <h3>Repository owner</h3>
                <h2 class="Repository__Data"><%- getRepositoryOwner() %></h2>
            </div>
            <div class="Repository__Info">
                <h3>Top contributors</h3>
                <h2 class="Repository__Data Repository__Contributors"><%- getTopContributors() %></h2>
            </div>

        </div>
        <div class="Repository__Info__Right">
            <div class="Repository__Info">
                <h3>Date of issue</h3>
                <h2 class="Repository__Data"><%- getDate() %></h2>
            </div>
            <div class="Repository__Info">
                <h3>Repository stars</h3>
                <h2 class="Repository__Data"><%- getRepositoryStars() %></h2>
            </div>
            <div class="Repository__Info">
                <h3>Repository watchers</h3>
                <h2 class="Repository__Data"><%- getrepositoryWatchers() %></h2>
            </div>
            <div class="Repository__Info">
                <h3>Repository Forks</h3>
                <h2 class="Repository__Data"><%- getRepositoryforks() %></h2>
            </div>
        </div>
    </div>
    <div class="Meta-data__Row">
        <div class="Meta-data">
            <p>Times cited</p>
            <div class = Meta-data__Data><p><%- getTimesCited() %></p></div>
        </div>
        <div class="Meta-data">
            <p>Fairness</p>
            <div class = Meta-data__Data><p><%- getFairness() %></p></div>
        </div>
        <div class="Meta-data">
            <p>Methods reused in other projects</p>
            <div class = Meta-data__Data><p><%- getMethodsReuse() %></p></div>
        </div>
        <div class="Meta-data">
            <p>Quality Score</p>
            <div class = Meta-data__Data><p><%- getQualityScore() %></p></div>
        </div>
    </div>
</div>

